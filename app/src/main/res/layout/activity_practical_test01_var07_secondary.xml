<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="ro.pub.cs.systems.eim.practicaltest01var07.PracticalTest01Var07MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:id="@+id/top_left_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_row="0"
            android:inputType="number"
            android:layout_column="0"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/top_right_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_alignParentRight="true"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/bottom_left_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@id/top_left"
            android:layout_alignParentLeft="true"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/bottom_right_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_alignParentRight="true"
            android:layout_below="@id/top_right"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="end"/>

    <Button
        android:id="@+id/sum"
        android:layout_gravity="start"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/suma"/>

    <Button
        android:id="@+id/product"
        android:layout_gravity="end"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="3"
        android:layout_column="3"
        android:text="@string/product"/>
    </GridLayout>

</LinearLayout>